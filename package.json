{
	"name": "polkadot-basic-notification",
	"version": "0.1.0",
	"description": "A notification system for Substrate based relaychains and its parachains",
	"main": "index.js",
	"scripts": {
		"dev": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node ./src/index.ts",
		"build": "./node_modules/.bin/tsc --pretty",
		"test": "./node_modules/.bin/jest",
		"start": "./node_modules/.bin/ts-node ./src/index.ts",
		"start-config": "./node_modules/.bin/ts-node ./src/index.ts -c ./examples/config-dev.json",
		"deploy:pm2": "./node_modules/.bin/pm2 start pm2.config.js",
		"update": "./node_modules/.bin/ncu -u && yarn",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
		"lint": "eslint . --ext .ts --fix"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.23.9",
		"@babel/core": "^7.23.9",
		"@babel/preset-typescript": "^7.23.3",
		"@types/jest": "^29.5.11",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^20.11.15",
		"@types/nodemailer": "6.4.14",
		"@types/request": "^2.48.12",
		"@types/yargs": "^17.0.32",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"nodemon": "^3.0.3",
		"npm-check-updates": "16.14.14",
		"pm2": "^5.3.1",
		"prettier": "^3.2.4",
		"ts-interface-builder": "^0.3.3",
		"ts-jest": "^29.1.2",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "5.3.3"
	},
	"dependencies": {
		"@polkadot/api": "10.11.2",
		"js-yaml": "4.1.0",
		"matrix-js-sdk": "^31.2.0",
		"nodemailer": "^6.9.9",
		"openpgp": "^5.11.0",
		"request": "2.88.2",
		"telegraf": "^4.15.3",
		"ts-interface-checker": "^1.0.2",
		"winston": "^3.11.0",
		"yargs": "^17.7.2"
	}
}
